%h1 Listing pets
%table
  %thead
    %tr
      %th Name
      %th Date of birth
      %th{:colspan => "3"}
      %th Life time
  %tbody
    - current_user.pets.each do |pet|
      %tr
        %td= pet.name
        %td= pet.date_of_birth
        %td= link_to 'Show', pet
        %td= link_to 'Edit', edit_pet_path(pet)
        %td= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' }
        %td= "Today I have " + pluralize(pet.life_time, 'day')
%br/
= link_to 'New Pet', new_pet_path
