= form_for(pet) do |f|
  - if pet.errors.any?
    #error_explanation
      %h2
        = pluralize(pet.errors.count, "error")
        prohibited this pet from being saved:
      %ul
        - pet.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :date_of_birth
    %br/
    = f.date_select :date_of_birth
  .actions
    = f.submit
