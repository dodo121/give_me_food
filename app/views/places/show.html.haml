.col-md-3
  %h3 Place details
  %p#notice= notice

  %p
    %b Street:
    = place.street
  %p
    %b City:
    = place.city
  %p
    %b Country:
    = place.country
  %p
    %b Description:
    = place.description

  = link_to 'Edit', edit_place_path(place)
  \|
  = link_to 'Back', places_path

  = link_to 'Add to visited', add_to_visited_place_path, method: :post

.col-md-9
  %h3 Map:
  %div{:style => "width: 800px;"}
    #map{:style => "width: 800px; height: 400px;"}
    = render 'places/maps'
