.col-md-3
  %h4= pluralize(month_number, 'month')
  = form_tag charges_path do
    %article
      %label.amount
        %span
          Amount: $ #{amount}
      = hidden_field_tag 'amount', "#{amount_in_cents}"
      = hidden_field_tag 'month_number', month_number
    %script.stripe-button{"data-amount" => "amount_in_cents", "data-description" =>  "#{description}", "data-key" => STRIPE_PUBLIC_KEY, :src => "https://checkout.stripe.com/checkout.js"}
